@model IEnumerable<LoadDist.Models.DataModels.Lecturer>

@{
    ViewBag.Title = "Преподаватели";
}

<h2>Преподаватели</h2>
<input type="button" value="Генерация отчёта" onclick="location.href='@Url.Action("GenerateReport", "Lecturers")'" class="btn btn-default" />
<hr />

<p>
    @Html.ActionLink("Добавить", "Create")
</p>
<table class="table">
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Surname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Patronymic)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Подробнее", "Details", new { id = item.Id }) |
            @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
